{
  "name": "tutum",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Your ultimate brower extension for security check",
  "icons": {
    "16": "src/icons/bot.png",
    "128": "src/icons/tutum.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*",
    "https://*"
  ],
  "options_ui": {
    "page": "src/options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*",
        "https://*"
      ],
      "js": [
        "src/scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "src/icons/bot.png",
      "38": "src/icons/tutum.png"
    },
    "default_title": "Tutum",
    "default_popup": "src/popup.html"
  }
}


