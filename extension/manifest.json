{
    "name": "Tutum",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "Your ultimate brower extension for security check",
    "icons": {
      "16": "icons/bot.png",
      "128": "icons/tutum.png"
    },
    "default_locale": "en",
    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "notifications",
      "webRequest", 
      "webNavigation"
    ],
    "host_permissions": ["<all_urls>"],

    "options_ui": {
      "page": "options.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],

        "js": [
            "content_script.js"
        ],
        
        "run_at": "document_end",
        "all_frames": true
      }
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/bot.png"
      }

  }
  
  
  